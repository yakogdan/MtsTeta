<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_item_movie"
    android:layout_width="150dp"
    android:layout_height="380dp"
    android:background="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_movie_poster"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/tv_item_movie_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_item_movie_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/movie_poster"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/ic_image_not_found" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_tv_soon"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:text="@string/soon"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_item_movie_title"
        style="@style/fontStyle_1.Bold"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_movie_poster"
        android:maxLines="2"
        android:minLines="2"
        app:layout_constraintStart_toStartOf="@id/cv_movie_poster"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        tools:text="@string/wrath_of_man_title" />

    <TextView
        android:id="@+id/tv_item_movie_description"
        style="@style/fontStyle_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:textSize="12sp"
        android:maxLines="5"
        android:minLines="5"
        app:layout_constraintEnd_toEndOf="@id/cv_movie_poster"
        app:layout_constraintStart_toStartOf="@id/tv_item_movie_title"
        app:layout_constraintTop_toBottomOf="@id/tv_item_movie_title"
        tools:text="@string/movie_description" />

    <ImageView
        android:id="@+id/rbMovie"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/rating_bar"
        android:src="@drawable/ratingbar_demo"
        app:layout_constraintStart_toStartOf="@id/tv_item_movie_description"
        app:layout_constraintTop_toBottomOf="@id/tv_item_movie_description" />


    <TextView
        android:id="@+id/tv_item_movie_age_limit"
        style="@style/fontStyle_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_movie_item_age_limit"
        android:padding="5dp"
        tools:text="18+"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="@id/rbMovie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rbMovie"
        tools:ignore="SmallSp" />


</androidx.constraintlayout.widget.ConstraintLayout>